{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node", "electron"]
  },
  "include": [
    "src/app/main/**/*.ts",
    "src/app/preload/**/*.ts",
    "src/app/shared/**/*.ts",
    "src/test/**/*.ts",
    "types/**/*.d.ts"
  ]
}
